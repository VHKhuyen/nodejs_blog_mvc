<div class="container">
    <div class="row">
        {{#with product}}
        <div class="card mb-3">
            <img src="{{this.image}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <span>{{this.price}}</span>
                <p class="card-text">{{this.description}}</p>
            </div>
        </div>
        {{/with}}
    </div>
</div>